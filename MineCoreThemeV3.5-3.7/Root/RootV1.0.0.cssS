:root {

    /* Image variables */
    --BG-image: url('https://i.imgur.com/xoAa3Go.png');
    --BG-image-blur: 0px;

    /* Brightness variables */
    --BG-serverlist-brightness: 0.7;
    --BG-left-brightness: 0.7;
    --BG-right-brightness: 0.4;
    --BG-popout-brightness: 0.1;

    --BG-gradient-one: 24, 135, 220;       
    --BG-gradient-two: 53, 237, 237;
    --BG-gradient-direction: -5345deg;

    /* Other variables */
    --BG-window-padding: 25px;
    --BG-window-roundness: 5px;
    --BG-left-right-split: 7;

}
